{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Server",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "nodemon"
            ],
            "restart": true,
            "smartStep": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Debug Client (Chrome)",
            "type": "pwa-chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            // "userDataDir": false
        },
        {
            "name": "Debug Client (Edge)",
            "request": "launch",
            "type": "pwa-msedge",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            // "userDataDir": false
        },
    ]
}
